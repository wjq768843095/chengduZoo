page {
    display: flex;
    flex-direction: column;
    width: 100%;
}

.wrap {
    width: 96%;
    margin-left: 2%;
    background: #fff;
    margin-top: 10rpx;
    border-radius: 6rpx;
    font-size: 30rpx;
    margin-bottom: 40rpx;
}

.panda {
    height: 70rpx;
    text-align: center;
    font-size: 40rpx;
    color: #fff;
    margin-top: 20rpx;
}

.orderstaus {
    display: flex;
    justify-content: space-between;
    padding: 20rpx;
}

.red {
    color: red;
}

.os {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.img {
    width: 310rpx;
    height: 310rpx;
}

.total {
    text-align: right;
    padding: 20rpx;
}

.barco {
    position: relative;
    top: -30rpx;
    left: -4rpx;
}

.piaox {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 100rpx;
}

.codeno {
    position: relative;
    top: -40rpx;
}

.ticketbody {
    width: 96%;
    margin: 20px auto;
    border-radius: 4px;
    overflow: hidden;
}

.top {
    background-color: #c21920;
    color: #3e4042;
}

.ticketitle {
    font-size: 18px;
    color: #000;
    text-align: center;
    padding: 30px 0 10px;
}

.middle {
    background-color: #c21920;
    padding: 10px 24px;
    clear: both;
}

.bfont {
    font-size: 24px;
    color: #000;
}

.sfont {
    font-size: 14px;
    color: #000;
}

.statesbox {
    width: 33%;
    float: left;
}

.statebox {
    clear: both;
}

.health-box,.health-box .state {
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
}

.health-box .time {
    width: 400rpx;
    height: 80rpx;
    color: #fff;
    font-weight: 500;
    line-height: 80rpx;
    text-align: center;
    border-radius: 40rpx;
    margin-top: 10rpx;
}

.health-state-box {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    background-color: rgba(0,0,0,.6);
}

.health-state-box .text {
    display: flex;
    color: #fff;
    padding: 60rpx;
    font-weight: 500;
    font-size: 30rpx;
}